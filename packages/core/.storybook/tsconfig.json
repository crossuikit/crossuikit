{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "isolatedModules": true,
        "skipLibCheck": true
    },
    "include": [
        "*.ts",
        "*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}